<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/edit_text_date_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Date &amp; Time" />

    <EditText
        android:id="@+id/edit_text_subject_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Subject Code" />

    <EditText
        android:id="@+id/edit_text_subject_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Subject Description" />

    <EditText
        android:id="@+id/edit_text_room_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Room Number" />

</LinearLayout>